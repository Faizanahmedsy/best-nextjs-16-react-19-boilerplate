{
  "extends": ["next/core-web-vitals", "next/typescript", "prettier"],
  "plugins": ["react"],
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],

    "react/function-component-definition": "off",
    "react/destructuring-assignment": ["error", "always"],

    "no-restricted-syntax": [
      "warn",
      {
        "selector": "VariableDeclarator[id.name=/^[A-Z]/] > ArrowFunctionExpression",
        "message": "üõë TEAM RULE: Don't use Arrow Functions for Components! Please rewrite this as 'function ComponentName() {}'."
      }
    ],
    "react/jsx-key": [
      "error",
      {
        "checkFragmentShorthand": true,
        "checkKeyMustBeforeSpread": true,
        "warnOnDuplicates": true
      }
    ],
    "react/jsx-no-target-blank": "error",

    // Force Absolute Imports
    "no-restricted-imports": [
      "warn",
      {
        "patterns": [
          {
            "group": ["../*", "./*"],
            "message": "üõë TEAM RULE: Please use absolute imports (e.g. @/lib/utils) instead of relative imports."
          }
        ],
        "paths": [
          {
            "name": "react",
            "importNames": ["useMemo", "useCallback"],
            "message": "‚ö†Ô∏è REACT COMPILER RULE: Do not use useMemo or useCallback. The React Compiler handles memoization automatically. Only use these as an explicit escape hatch for advanced/legacy cases."
          }
        ]
      }
    ]
  },

  "overrides": [
    {
      // Allow Arrow functions in Shadcn UI components (because we didn't write them)
      "files": ["src/components/ui/*.tsx", "src/components/ui/**/*.tsx"],
      "rules": {
        "react/function-component-definition": "off",
        "no-restricted-syntax": "off"
      }
    }
  ]
}
