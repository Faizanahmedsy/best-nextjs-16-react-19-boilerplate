{
  "extends": ["next/core-web-vitals", "next/typescript", "prettier"],
  "plugins": ["react"],
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],

    "react/function-component-definition": "off",

    "no-restricted-syntax": [
      "warn",
      {
        "selector": "VariableDeclarator[id.name=/^[A-Z]/] > ArrowFunctionExpression",
        "message": "ðŸ›‘ TEAM RULE: Don't use Arrow Functions for Components! Please rewrite this as 'function ComponentName() {}'."
      }
    ],

    // Force Absolute Imports
    "no-restricted-imports": [
      "warn",
      {
        "patterns": [
          {
            "group": ["../*", "./*"],
            "message": "ðŸ›‘ TEAM RULE: Please use absolute imports (e.g. @/lib/utils) instead of relative imports."
          }
        ]
      }
    ]
  },

  "overrides": [
    {
      // Allow Arrow functions in Shadcn UI components (because we didn't write them)
      "files": ["src/components/ui/*.tsx", "src/components/ui/**/*.tsx"],
      "rules": {
        "react/function-component-definition": "off",
        "no-restricted-syntax": "off"
      }
    }
  ]
}
