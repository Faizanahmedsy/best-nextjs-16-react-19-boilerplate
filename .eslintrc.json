{
  "extends": ["next/core-web-vitals", "next/typescript", "prettier"],
  "plugins": ["react"],
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],

    "react/function-component-definition": "off",
    "no-restricted-syntax": [
      "warn",
      {
        "selector": "VariableDeclarator[id.name=/^[A-Z]/] > ArrowFunctionExpression",
        "message": "ðŸ›‘ TEAM RULE: Don't use Arrow Functions for Components! Please rewrite this as 'function ComponentName() {}'."
      }
    ],

    // FORCE ABSOLUTE IMPORTS (@/...)
    "no-restricted-imports": [
      "warn",
      {
        "patterns": [
          {
            "group": ["../*", "./*"],
            "message": "ðŸ›‘ TEAM RULE: Please use absolute imports (e.g. @/lib/utils) instead of relative imports."
          }
        ]
      }
    ]
  }
}
